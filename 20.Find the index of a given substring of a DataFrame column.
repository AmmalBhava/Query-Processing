import pandas as pd

# Sample DataFrame
data = {'Text': ['apple pie', 'banana split', 'cherry tart', 'apple tart']}
df = pd.DataFrame(data)

# Define the substring to search for
substring = 'apple'

# Create a new column to store the index of the substring in each row
df['Index'] = df['Text'].apply(lambda x: x.find(substring) if substring in x else -1)

print(df)
